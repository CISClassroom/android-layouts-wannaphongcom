    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@id/editText"
        android:id="@+id/editText4"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
